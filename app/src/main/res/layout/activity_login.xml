<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login"
    android:background="@color/colorPrimary">
    <ImageView android:src="@mipmap/ic_launcher"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textVisiblePassword"
        android:ems="10"
        android:id="@+id/txtUsuario"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Usuario"
        android:layout_marginBottom="15dp"
        android:textColorHint="#FFFFFF"
        android:textIsSelectable="false"
        android:selectAllOnFocus="false"
        android:typeface="monospace"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtContraseña"
        android:layout_below="@+id/txtUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Contraseña"
        android:layout_marginBottom="15dp"
        android:textColorHint="#FFFFFF"
        android:textIsSelectable="false"
        android:selectAllOnFocus="false"
        android:typeface="monospace"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnIngresar"
        android:layout_below="@+id/txtContraseña"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:elevation="6dp"
        android:contextClickable="false"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar con facebook"
        android:id="@+id/btnIngresarFace"
        android:layout_below="@+id/btnIngresar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnIngresar"
        android:layout_alignEnd="@+id/btnIngresar"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/background_light"
        android:background="#3b5998"
        android:elevation="6dp"
        android:contextClickable="false"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar como Invitado"
        android:id="@+id/btnIngresarInvitado"
        android:layout_below="@+id/btnIngresarFace"
        android:layout_alignRight="@+id/btnIngresarFace"
        android:layout_alignEnd="@+id/btnIngresarFace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:elevation="6dp"
        android:contextClickable="false"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todavía no tenes cuenta? Registrate aquí"
        android:id="@+id/txtRegistro"
        android:layout_below="@+id/btnIngresarInvitado"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:clickable="true"
        android:contextClickable="false" />
</RelativeLayout>
