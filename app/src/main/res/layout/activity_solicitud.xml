<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="generic.muniapp.Solicitud"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fecha y hora en que vio la falla"
        android:id="@+id/lblFecha"
        android:layout_marginBottom="8dp"
        android:textColor="#FFFFFF" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:id="@+id/pickerFecha"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="20dp"
            android:editable="false"
            android:hint="YYYY/MM/DD"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:drawableLeft="@drawable/fecha"/>

        <EditText
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:id="@+id/pickerHora"
            android:layout_marginBottom="8dp"
            android:editable="false"
            android:hint="HH/MM"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:drawableLeft="@drawable/hora"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Problema"
        android:id="@+id/lblProblema"
        android:layout_marginBottom="8dp"
        android:textColor="#FFFFFF" />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comboProblema"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        ></Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Descripcion"
            android:id="@+id/lblDescripcion"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtDescripcion"
        android:layout_marginBottom="8dp"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/btnContinuarSolicitud"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="@drawable/bk_boton_plano"
        android:stateListAnimator="@null"/>

</LinearLayout>